# PayPal API Credentials (Required)
PAYPAL_SANDBOX_CLIENT_ID=your_client_id_here
PAYPAL_SANDBOX_CLIENT_SECRET=your_client_secret_here

# Server Configuration
PORT=8080

# Railway Deployment (Production)
# Update this with your Railway-generated URL after deployment
# Example: https://pp-web-v6-callbacks-production.up.railway.app
RAILWAY_PUBLIC_URL=

# Public Base URL (Set this in Railway dashboard)
# This should match your RAILWAY_PUBLIC_URL in production
# For local development, leave empty or set to http://localhost:8080
PUBLIC_BASE_URL=

# Optional: Webhook.site URL for monitoring callbacks (not used for actual callbacks)
WEBHOOK_SITE_URL=
